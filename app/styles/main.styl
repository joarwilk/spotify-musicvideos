.main-menu.narrow-menu
  min-height: 604px

#nav-watch
  padding: 0
  padding-top: 9px

  text-align: center

  i
    line-height: 26px
    font-size: 35px

#section-watch .root
  display: none
  background-color: #000 !important

#section-watch .video-wrapper
  height: 0
  padding-bottom: 56.25%
  position: relative
  transition: all 0.2s

  iframe
    width: 100%
    height: 100%
    position: absolute
    top: 0
    right: 0
    transition: opacity 0.6s

  iframe:first-of-type
    left: 0
    right: auto

.video-overlay
  position: absolute
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: 2

.watch-controls
  position: absolute
  display: none
  bottom: 0
  height: 200px
  width: 100%
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 100%)

#primary-wrapper
  width: 45%
  height: 250px
  display: inline-block
  position: relative

#preload-wrapper
  width: 45%
  height: 250px
  display: inline-block
  position: relative

.track-popup
  height: 55px
  position: absolute
  bottom: 10%
  left: 7%
  padding: 10px 15px
  background: #1c1c1f
  font-family: 'proxima_nova','Helvetica Neue',Helvetica,Arial,sans-serif
  border-radius: 4px
  transition: all 0.5s
  z-index: 5
  opacity: 0

  h3
    position: relative
    color: #a2a3a5
    font-size: 14px
    margin: 0
    line-height: 17px
    transition: all 0.5s
    left: -10px

  h3:first-of-type
    color: #dfe0e6
    margin-bottom: 3px

.popup-logo
  width: 37px
  display: inline-block
  margin-right: 10px
  vertical-align: top
  position: relative
  top: -1px

.popup-info
  display: inline-block

.show-popup
  .track-popup
    opacity: 1
    left: 10%

    h3
      left: 0

    //h3:first-of-type
     // top: -8px

#main
  transition: right 0.2s, left 0.2s

#main-nav
  transition: opacity .3s

#now-playing
  transition: opacity .3s, right 0.3s !important

.watchmode
  #section-watch .rooot
    padding: 0 300px 0 100px

  #main
    right: 0 !important
    left: 0 !important

  #main > div:not(#section-watch) > .root
    padding-left: 90px
    padding-right: 230px

  #suggest-area
    display: none

  &.watching
    #main-nav, #now-playing
      opacity: 0.6

      &:hover
        opacity: 0.95


    &.hide-controls
      cursor: none !important

      #main-nav, #now-playing
        opacity: 0





