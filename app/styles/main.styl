.main-menu.narrow-menu
  min-height: 604px

#nav-watch
  padding: 0
  padding-top: 9px

  text-align: center

  i
    line-height: 26px
    font-size: 35px

#section-watch .root
  display: none
  background-color: #000 !important

#section-watch .video-wrapper
  height: 0
  padding-bottom: 56.25%
  position: relative
  transition: all 0.2s

  iframe
    width: 100%
    height: 100%
    position: absolute
    top: 0
    right: 0
    transition: opacity 0.6s

  iframe:first-of-type
    left: 0
    right: auto

.video-overlay
  position: absolute
  top: 0
  left: 0
  height: 100%
  width: 100%
  z-index: 2

.watch-controls
  position: absolute
  display: none
  bottom: 0
  height: 200px
  width: 100%
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.7) 100%)

#primary-wrapper
  width: 45%
  height: 250px
  display: inline-block
  position: relative

#preload-wrapper
  width: 45%
  height: 250px
  display: inline-block
  position: relative

.track-popup
  display: none

#main
  transition: right 0.2s, left 0.2s

#main-nav
  transition: opacity .3s

#now-playing
  transition: opacity .3s, right 0.3s !important

.watchmode
  #section-watch .rooot
    padding: 0 300px 0 100px

  #main
    right: 0 !important
    left: 0 !important

  #suggest-area
    display: none

  .video-wrapper
    //top: 50% !important
    //margin: auto
    //transform: translate(0, -50%);

  #main-nav, #now-playing
    opacity: 0.6

    &:hover
      opacity: 0.95


  &.hide-controls
    cursor: none !important

    #main-nav, #now-playing
      opacity: 0







