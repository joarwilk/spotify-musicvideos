{
  "manifest_version": 2,

  "name": "Spotify Music Videos",
  "description": "Adds a music video mode to Spotify's web player",
  "version": "1.1",

  "permissions": [
    "*://play.spotify.com/",
    "*://*.spotify.edgekey.net/",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ],
  "content_scripts": [
    {
      "matches": ["*://play.spotify.com/*"],
      "css": ["css/main.css"],
      "js": ["js/vendor/jquery.js", "js/vendor/require.js", "js/app.js"]
    }
  ],
  "web_accessible_resources": [
    "views/*",
    "js/vendor/*",
    "js/vendor/spotify/*"
  ],
  "externally_connectable": {
    "matches": ["*://play.spotify.com/*"]
  },
  "background": {
    "page": "background.html"
  }
}